<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back">
    <TextView
        android:id="@+id/AF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/cardview_light_background"
        android:text="Antecedentes Familiares"
        android:fontFamily="casual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/obe"
        android:layout_width="255dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:background="@color/cardview_light_background"
        android:text="Obesidad: No"
        app:layout_constraintEnd_toEndOf="@id/AF"
        app:layout_constraintStart_toStartOf="@id/AF"
        app:layout_constraintTop_toTopOf="@id/AF"/>
    <EditText
        android:id="@+id/dia"
        android:layout_width="255dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="8dp"
        android:background="@color/cardview_light_background"
        android:text="Diabetes: Si, Mellitus tipo b"
        app:layout_constraintEnd_toEndOf="@id/AF"
        app:layout_constraintStart_toStartOf="@id/AF"
        app:layout_constraintTop_toTopOf="@id/AF"/>

    <EditText
        android:id="@+id/imc"
        android:layout_width="255dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="20dp"
        android:background="@color/cardview_light_background"
        android:text="HTA: No"
        app:layout_constraintEnd_toEndOf="@id/AF"
        app:layout_constraintStart_toStartOf="@id/AF"
        app:layout_constraintTop_toTopOf="@id/AF" />
    <EditText
        android:id="@+id/Cancer"
        android:layout_width="255dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="235dp"
        android:layout_marginEnd="8dp"
        android:background="@color/cardview_light_background"
        android:text="Cáncer:Si, Colón/Gastrointestinal/Pulmón"
        app:layout_constraintEnd_toEndOf="@id/AF"
        app:layout_constraintStart_toStartOf="@id/AF"
        app:layout_constraintTop_toTopOf="@id/AF"/>
    <EditText
        android:id="@+id/colesterol"
        android:layout_width="255dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="305dp"
        android:layout_marginEnd="8dp"
        android:background="@color/cardview_light_background"
        android:text="Hipercolesterolemia: No"
        app:layout_constraintEnd_toEndOf="@id/AF"
        app:layout_constraintStart_toStartOf="@id/AF"
        app:layout_constraintTop_toTopOf="@id/AF"/>
    <EditText
        android:id="@+id/trigliceridos"
        android:layout_width="255dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="365dp"
        android:layout_marginEnd="8dp"
        android:background="@color/cardview_light_background"
        android:text="Hipertrigliceridemia: Si"
        app:layout_constraintEnd_toEndOf="@id/AF"
        app:layout_constraintStart_toStartOf="@id/AF"
        app:layout_constraintTop_toTopOf="@id/AF"/>



</androidx.constraintlayout.widget.ConstraintLayout>